---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
    image?: string;
    type?: 'website' | 'article';
    canonicalURL?: string;
}

const { 
    title, 
    description = "Yakroh builds ultra-focused utilities for engineers. Use our free online JSON editor, viewer, and comparison tools to visualize complex structures and streamline your workflow.",
    image = "/stikiroh-light.jpg",
    type = "website",
    canonicalURL = Astro.url.href
} = Astro.props;

const schemaMarkup = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://www.yakroh.com/#organization",
      "name": "Yakroh",
      "url": "https://www.yakroh.com",
      "logo": {
        "@type": "ImageObject",
        "url": "https://www.yakroh.com/logo.svg"
      },
      "sameAs": [
        "https://github.com/yakroh" 
      ]
    },
    {
      "@type": "WebSite",
      "@id": "https://www.yakroh.com/#website",
      "url": "https://www.yakroh.com",
      "name": "Yakroh",
      "publisher": {
        "@id": "https://www.yakroh.com/#organization"
      },
      "inLanguage": "en-US"
    }
  ]
};
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="generator" content={Astro.generator} />
        <link rel="canonical" href={canonicalURL} />
		<title>{title}</title>

        <!-- SEO/SMM -->
        <meta name="keywords" content="JSON editor, JSON viewer, JSON compare, developer tools, local-first, privacy-first, productivity tools, Stikiroh, ideation board, sticky notes, kanban board, offline tools, json formatter, json validator" />
        <meta name="author" content="Yakroh" />
        <meta name="robots" content="index, follow" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content={type} />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(image, Astro.url)} />
        <meta property="og:site_name" content="Yakroh" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={new URL(image, Astro.url)} />
        
        <!-- Structured Data -->
        <script type="application/ld+json" set:html={JSON.stringify(schemaMarkup)} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<script is:inline>
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
					return 'dark';
				}
				return 'light';
			})();

			if (theme === 'light') {
				document.documentElement.classList.remove('dark');
			} else {
				document.documentElement.classList.add('dark');
			}
			window.localStorage.setItem('theme', theme);
		</script>
	</head>
	<body class="min-h-screen flex flex-col selection:bg-green-500/30 bg-white dark:bg-[#000000] text-gray-900 dark:text-[#f5f5f7] font-sans antialiased transition-colors duration-300 relative">
        <!-- Background Gradients -->
        <div class="fixed inset-0 z-0 pointer-events-none overflow-hidden">
            <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-green-500/5 blur-[100px] animate-pulse"></div>
            <div class="absolute top-[20%] right-[-10%] w-[30%] h-[50%] rounded-full bg-blue-500/5 blur-[100px] animate-pulse" style="animation-duration: 7s;"></div>
            <div class="absolute bottom-[-10%] left-[20%] w-[40%] h-[40%] rounded-full bg-teal-500/5 blur-[100px] animate-pulse" style="animation-duration: 5s;"></div>
        </div>

		<Header />
		<main class="flex-grow pt-16 relative z-10">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	:root {
		--accent: 0, 245, 160;
		--accent-light: 146, 252, 224;
		--accent-dark: 0, 163, 108;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	body {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
	}

	.gradient-text {
		@apply bg-clip-text text-transparent bg-gradient-to-r from-green-400 via-teal-400 to-blue-400;
	}

	.glass-card {
		@apply bg-gray-100/50 dark:bg-white/5 backdrop-blur-xl border border-gray-200 dark:border-white/10;
	}
</style>