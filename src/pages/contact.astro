---
import Layout from '../layouts/Layout.astro';

const description = "Have a question, suggestion, or just want to say hello? We'd love to hear from you. Reach out to Yakroh for general inquiries, support, or partnership opportunities.";
---

<Layout title="Contact Us | Yakroh" description={description}>
  <section class="relative pt-32 pb-24 overflow-hidden">
    <div class="container mx-auto px-6 max-w-4xl">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-semibold text-gray-900 dark:text-[#f5f5f7] mb-6">
          Get in <span class="text-gray-500 dark:text-[#a1a1a6]">Touch</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-[#86868b] max-w-2xl mx-auto font-medium">
          Have a question, suggestion, or just want to say hello? We'd love to hear from you.
        </p>
      </div>

      <div class="glass-card rounded-2xl p-8 md:p-12">
        <div class="flex flex-col md:flex-row items-center justify-between gap-12">
          <div class="w-full md:w-1/2">
            <h3 class="text-2xl font-semibold text-gray-800 dark:text-[#f5f5f7] mb-4">Contact Information</h3>
            <p class="text-gray-500 dark:text-[#86868b] mb-8 text-base">
              For general inquiries, support, or partnership opportunities, please reach out to us via email.
            </p>

            <div class="flex items-center space-x-4 mb-6">
              <div class="w-12 h-12 bg-gray-100 dark:bg-[#2d2d2f] rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
              </div>
              <div>
                <div class="text-xs text-gray-500 dark:text-[#86868b] font-medium uppercase tracking-wider">Email Us</div>
                <a href="mailto:info@yakroh.com" class="text-lg text-gray-800 dark:text-[#f5f5f7] font-medium hover:text-green-600 dark:hover:text-green-400 transition-colors">info@yakroh.com</a>
              </div>
            </div>

            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gray-100 dark:bg-[#2d2d2f] rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
              </div>
              <div>
                <div class="text-xs text-gray-500 dark:text-[#86868b] font-medium uppercase tracking-wider">Location</div>
                <div class="text-gray-800 dark:text-[#f5f5f7] font-medium">Kingston, ON, Canada</div>
              </div>
            </div>
          </div>

          <div class="w-full md:w-1/2 bg-gray-100/80 dark:bg-[#2d2d2f] rounded-xl p-8 border border-gray-200/80 dark:border-white/5">
            <h4 class="text-lg font-semibold text-gray-800 dark:text-[#f5f5f7] mb-4">Connect with us</h4>
            <p class="text-gray-500 dark:text-[#86868b] text-sm mb-6">
              Follow us on social media for the latest updates, tool releases, and developer tips.
            </p>
            <div class="flex space-x-4">
              <a href="https://www.youtube.com/@yakroh" class="w-10 h-10 bg-gray-200 dark:bg-[#3d3d3f] rounded-lg flex items-center justify-center text-gray-800 dark:text-[#f5f5f7] hover:bg-[#ff0000] transition-colors">
                <span class="sr-only">YouTube</span>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M18.34,5.42a2.4,2.4,0,0,0-1.7-1.7C15.16,3.5,12,3.5,12,3.5s-3.16,0-4.64.22a2.4,2.4,0,0,0-1.7,1.7A25.53,25.53,0,0,0,5.42,9.7v1.6A25.53,25.53,0,0,0,5.66,15.6a2.4,2.4,0,0,0,1.7,1.7c1.48.22,4.64.22,4.64.22s3.16,0,4.64-.22a2.4,2.4,0,0,0,1.7-1.7A25.53,25.53,0,0,0,18.58,11.3V9.7A25.53,25.53,0,0,0,18.34,5.42ZM10,12.5V8.5l4,2Z"></path></svg>
              </a>
              <a href="https://github.com/yakroh" class="w-10 h-10 bg-gray-200 dark:bg-[#3d3d3f] rounded-lg flex items-center justify-center text-gray-800 dark:text-[#f5f5f7] hover:bg-gray-700 transition-colors">
                <span class="sr-only">GitHub</span>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
