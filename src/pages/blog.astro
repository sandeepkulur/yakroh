---
import Layout from '../layouts/Layout.astro';

const description = "Yakroh Blog - Insights, tutorials, and updates on developer productivity tools.";
---

<Layout title="Blog | Yakroh" description={description}>
  <section class="relative pt-24 pb-24 overflow-hidden">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-7xl font-semibold leading-tight tracking-tight text-gray-400 dark:text-[#86868b] mb-6 transition-colors duration-300">
        Blog
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 dark:text-[#86868b] max-w-2xl mx-auto mb-12 leading-relaxed font-medium transition-colors duration-300">
        Insights, tutorials, and updates on developer productivity tools.
      </p>
    </div>
  </section>

  <section class="container mx-auto px-6 pb-24">
    <div class="text-center text-gray-500 dark:text-[#86868b]">
      <p>Coming soon...</p>
    </div>
  </section>
</Layout>