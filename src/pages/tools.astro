---
import Layout from '../layouts/Layout.astro';
import ToolHighlight from '../components/ToolHighlight.astro';
import MoreTools from '../components/MoreTools.astro';
import StikirohLandingSection from '../components/StikirohLandingSection';
---

<Layout title="Yakroh | Tools - Developer Productivity Tools">
  <section class="relative pt-24 pb-24 overflow-hidden">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-7xl font-semibold leading-tight tracking-tight text-gray-400 dark:text-[#86868b] mb-6 transition-colors duration-300">
        Toolbox
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 dark:text-[#86868b] max-w-2xl mx-auto mb-12 leading-relaxed font-medium transition-colors duration-300">
        Intuitive, powerful, and privacy-first developer tools.
      </p>
    </div>
  </section>

  <StikirohLandingSection client:load />
  <ToolHighlight forceDisplay />
  <MoreTools />
</Layout>