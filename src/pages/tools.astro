---
import Layout from '../layouts/Layout.astro';
import ToolHighlight from '../components/ToolHighlight.astro';
---

<Layout title="Yakroh | Tools - Developer Productivity Tools">
  <div class="container mx-auto px-6 py-24">
    <h2 class="text-4xl font-semibold mb-12 text-[#f5f5f7] inline-block">The Yakroh Toolbox</h2>
    <div class="grid md:grid-cols-2 gap-8">
       <ToolHighlight forceDisplay />
       <div class="bg-[#1d1d1f] p-8 rounded-2xl flex flex-col justify-center items-center text-center space-y-4 border border-white/10">
          <div class="w-16 h-16 bg-[#2d2d2f] rounded-xl flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-[#2997ff]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>
          </div>
          <h3 class="text-2xl font-semibold text-[#f5f5f7]">More Tools Coming Soon</h3>
          <p class="text-[#86868b] max-w-sm">We are building high-performance CLI utilities, API visualizers, and productivity enhancers to keep you in the flow.</p>
          <button class="px-6 py-2 bg-[#2d2d2f] border border-white/5 rounded-full hover:bg-[#3d3d3f] transition-colors text-[#f5f5f7] text-sm font-medium">Notify Me</button>
       </div>
    </div>
  </div>
</Layout>