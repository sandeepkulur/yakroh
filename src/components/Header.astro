---
import ThemeToggle from './ThemeToggle';
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-[#000000]/80 backdrop-blur-xl border-b border-gray-200 dark:border-white/10 transition-colors duration-300">
  <nav class="container mx-auto px-6 h-14 flex items-center justify-between">
    <a
      href="/"
      class="flex items-center space-x-2 cursor-pointer group"
    >
      <div class="w-5 h-5 rounded-lg flex items-center justify-center transform group-hover:rotate-12 transition-transform">
        <img src="/logo.svg" alt="Yakroh Logo" class="w-full h-full" />
      </div>
      <span class="text-base font-semibold tracking-tight text-gray-900 dark:text-[#f5f5f7] group-hover:text-black dark:group-hover:text-white transition-colors">Yakroh</span>
    </a>

    <div class="hidden md:flex items-center space-x-8">
      <a
        href="/"
        class={`text-xs font-medium transition-colors ${pathname === '/' ? 'text-black dark:text-white' : 'text-gray-500 dark:text-[#86868b] hover:text-black dark:hover:text-[#f5f5f7]'}`}
      >
        Home
      </a>
      <a
        href="/tools"
        class={`text-xs font-medium transition-colors ${pathname === '/tools' ? 'text-black dark:text-white' : 'text-gray-500 dark:text-[#86868b] hover:text-black dark:hover:text-[#f5f5f7]'}`}
      >
        Tools
      </a>
      <a
        href="/blog"
        class={`text-xs font-medium transition-colors ${pathname === '/blog' ? 'text-black dark:text-white' : 'text-gray-500 dark:text-[#86868b] hover:text-black dark:hover:text-[#f5f5f7]'}`}
      >
        Blog
      </a>
      <a
        href="/contact"
        class={`text-xs font-medium transition-colors ${pathname === '/contact' ? 'text-black dark:text-white' : 'text-gray-500 dark:text-[#86868b] hover:text-black dark:hover:text-[#f5f5f7]'}`}
      >
        Contact
      </a>
    </div>

    <div class="flex items-center space-x-3">
      <a href="https://www.youtube.com/@yakroh" class="w-8 h-8 bg-gray-200 dark:bg-[#3d3d3f] rounded-lg flex items-center justify-center text-gray-800 dark:text-[#f5f5f7] hover:bg-[#ff0000] hover:text-white transition-colors" aria-label="YouTube">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" clip-rule="evenodd"></path></svg>
      </a>
      <a href="https://github.com/yakroh" class="w-8 h-8 bg-gray-200 dark:bg-[#3d3d3f] rounded-lg flex items-center justify-center text-gray-800 dark:text-[#f5f5f7] hover:bg-gray-700 hover:text-white transition-colors" aria-label="GitHub">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
      </a>
      <ThemeToggle client:load />
    </div>
  </nav>
</header>