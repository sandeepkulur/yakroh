---
import ThemeToggle from './ThemeToggle';
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-[#000000]/80 backdrop-blur-xl border-b border-gray-200 dark:border-white/10 transition-colors duration-300">
  <nav class="container mx-auto px-6 h-14 flex items-center justify-between">
    <a
      href="/"
      class="flex items-center space-x-2 cursor-pointer group"
    >
      <div class="w-5 h-5 rounded-lg flex items-center justify-center transform group-hover:rotate-12 transition-transform">
        <img src="/logo.svg" alt="Yakroh Logo" class="w-full h-full" />
      </div>
      <span class="text-base font-semibold tracking-tight text-gray-900 dark:text-[#f5f5f7] group-hover:text-black dark:group-hover:text-white transition-colors">Yakroh</span>
    </a>

    <div class="hidden md:flex items-center space-x-8">
      <a
        href="/"
        class={`text-xs font-medium transition-colors ${pathname === '/' ? 'text-black dark:text-white' : 'text-gray-500 dark:text-[#86868b] hover:text-black dark:hover:text-[#f5f5f7]'}`}
      >
        Home
      </a>
      <a
        href="/tools"
        class={`text-xs font-medium transition-colors ${pathname === '/tools' ? 'text-black dark:text-white' : 'text-gray-500 dark:text-[#86868b] hover:text-black dark:hover:text-[#f5f5f7]'}`}
      >
        Tools
      </a>
      <a
        href="/contact"
        class={`text-xs font-medium transition-colors ${pathname === '/contact' ? 'text-black dark:text-white' : 'text-gray-500 dark:text-[#86868b] hover:text-black dark:hover:text-[#f5f5f7]'}`}
      >
        Contact
      </a>
    </div>

    <div class="flex items-center space-x-4">
      <ThemeToggle client:load />
      <a
        href="https://jsonsv.yakroh.com"
        target="_blank"
        rel="noopener noreferrer"
        class="hidden sm:block text-[10px] font-medium px-3 py-1 bg-gray-100 dark:bg-[#1d1d1f] rounded-full text-gray-900 dark:text-[#f5f5f7] hover:bg-gray-200 dark:hover:bg-[#2d2d2f] transition-colors"
      >
        jsonsv.yakroh.com
      </a>
    </div>
  </nav>
</header>